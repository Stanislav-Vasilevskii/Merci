<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.0" author="stanislav.vasilevskii">
        <createTable tableName="points">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.1" author="stanislav.vasilevskii">
        <insert tableName="points">
            <column name="id" valueComputed="random_uuid()"/>
            <column name="user_id" valueComputed="random_uuid()"/>
            <column name="quantity" value="200"/>
        </insert>
    </changeSet>

    <changeSet id="1.0.2" author="stanislav.vasilevskii">
        <insert tableName="points">
            <column name="id" valueComputed="random_uuid()"/>
            <column name="user_id" valueComputed="random_uuid()"/>
            <column name="quantity" value="500"/>
        </insert>
    </changeSet>

</databaseChangeLog>